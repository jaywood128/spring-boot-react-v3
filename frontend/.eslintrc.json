{
  "extends": ["airbnb",
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    // "plugin:jsx-ally/recommended",
    "prettier",
    "prettier"
  ],
  "rules": {
    "react/prop-types": 0,
    "no-console" : "warn",
    "react-hooks/rules-of-hooks" : 2,
    "react-hooks/exhaustive-deps": 1 
  },
  "plugins": ["react", "import", "jsx-a11y", "react-hooks"],
  "parserOptions": {
    "ecmaVersion" : 2018,
    "sourceType" : "module",
    "ecmaFeatures": {
      "jsx" : true
    }
  },
  "env" : {
    "es6": true,
    "browser": true,
    "node": true
  }, 
  "settings": {
    "react" : {
      "version" : "detect"
    }
  }
}